<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.4/css/fontawesome.min.css">
    <title>Productos App</title>
</head>

<body>

    {{>navigation}}

    <main class="container p-5">
        {{{body}}}
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <script src="https://cdn.socket.io/4.4.1/socket.io.min.js"
        integrity="sha384-fKnu0iswBIqkjxrhQCTZ7qlLHOFEgNkRmK2vaO/LbTZSXdJfAu6ewRBdwHPhBo/H"
        crossorigin="anonymous"></script>

    <script>
        const socket = io.connect();

        function render(data) {
            console.log(data)
            const html = data.map((elem, index) => {
                return (`                
                    <tr>
                        <th scope="row">${elem.id}</th>
                        <td>${elem.title}</td>
                        <td>$ ${elem.price}</td>
                        <td>
                            <img class="img-thumbnail" src="${elem.logo}" alt="logo" width="70">                    
                        </td>
                        <td>
                            <div class="d-flex">
                                <form action="/editarProducto/${elem.id}?_method=PUT" method="GET">
                                    <button class="btn btn-sm btn-info">Editar</button>
                                </form>
                                <form action="/api/productos/${elem.id}?_method=DELETE" method="POST">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button class="mx-2 btn btn-sm btn-danger">Eliminar</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                ` )
            }).join(" ");
            document.getElementById('productos').innerHTML = html;
        }

        function renderChat(data) {
            console.log(data)
            if (data.length > 0) {
                const html = data.map((elem, index) => {
                    return (`                
                    <strong>${elem.name}</strong>:
                    <em>${elem.message}</em> </div>
                    <br>                    
                ` )
                }).join(" ");
                document.getElementById('mensajes').innerHTML = html;
            }
        }

        function addMessage(e) {
            const mensaje = {
                name: document.getElementById('username').value,
                message: document.getElementById('texto').value
            };
            socket.emit('new-message', mensaje);
            socket.on('mensajes', function (data) { renderChat(data); });
            document.getElementById('texto').value = ""
            return false;
        }

        socket.on('productos', function (data) { render(data); });
        socket.on('mensajes', function (data) { renderChat(data); });
    </script>

</body>

</html>